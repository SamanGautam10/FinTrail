@page "/debt"
@using FinTrail.Model
@using FinTrail.Services.Interface
@inject IDebtInterface DebtService

<style>
    .sidebar {
        display: inline-block;
        height: 100%;
        width: 200px;
        position: fixed;
        top: 0;
        left: 0;
        background-color: #c5e3b3;
        padding-top: 20px;
        text-align: center;
    }

        .sidebar img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 20px;
        }

    .container {
        margin-left: 270px;
    }

    .debt-table table th:nth-child(8),
    .debt-table table td:nth-child(8) {
        width: 250px;
    }
</style>

<div class="sidebar">
    <img src="/images/FinTrail.png" alt="Logo">
    <ul>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/balance">Balance</a></li>
        <li><a href="/transaction">Transactions</a></li>
        <li><a href="/debt">Debt</a></li>
        <li><a href="/logout">Logout</a></li>
    </ul>
</div>

<div class="container mt-5">
    <div class="add-debt-btn text-end mb-3">
        <a class="btn btn-primary btn-lg" href="/adddebt">Add Your Debt</a>
    </div>

    <div class="debt-table">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>SN.</th>
                    <th>Debt From</th>
                    <th>Amount</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Relationship</th>
                    <th>Status</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (debts?.Any() == true)
                {
                    int sn = 1;
                    foreach (var debt in debts)
                    {
                        <tr>
                            <td>@sn</td>
                            <td>@debt.DebtFrom</td>
                            <td>NPR. @debt.Amount</td>
                            <td>@debt.StartDate.ToString("yyyy-MM-dd")</td>
                            <td>@debt.EndDate.ToString("yyyy-MM-dd")</td>
                            <td>@debt.Relationship</td>
                            <td>@debt.Status</td>
                            <td>@debt.Description</td>
                            <td>
                                <a href="" class="btn btn-warning btn-sm me-2"><i class="bi bi-pencil-square"></i></a>
                                <a href="" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                        sn++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No debts found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<FinTrail.Model.Debt> debts = new();

    protected override async Task OnInitializedAsync()
    {
        debts = DebtService.GetAllDebts();
    }
}