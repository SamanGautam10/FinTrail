}

.sidebar ul li a {
    color: #4a4a4a;
    text-decoration: none;
    display: block;
    padding: 10px 0;
    border-radius: 5px;
    transition: all 0.3s ease-in-out;
}

.sidebar ul li a:hover {
    color: #ffffff;
    background-color: #0078d7;
    cursor: pointer;
}

/* Move the table to the right */
.container {
    margin-left: 270px; 
}

.transaction-table {
    margin-left: 20px;
}

/* Adjusting the Description column width */
.transaction-table table th:nth-child(6), 
.transaction-table table td:nth-child(6) {
    width: 270px;
}

</style>

